<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nacho.schoolidolpoints5" >
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_school_idol"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name"
            android:screenOrientation="sensorLandscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GreetingScreen" android:screenOrientation="sensorLandscape" />
        <activity android:name=".MainActivity" android:screenOrientation="sensorLandscape" />
    </application>

</manifest>
